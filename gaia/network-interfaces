auto lo
iface lo inet loopback

auto eth0
iface eth0 inet dhcp
    hostname gaia

auto lan-bridge
iface lan-bridge inet static
    bridge-ports eth1 eth2 eth3
    bridge-stp 1
    address 192.168.0.1
    netmask 255.255.255.0
iface lan-bridge inet static
    address 192.168.1.1
    netmask 255.255.255.0
